{
  "manifest_version": 2,
  "name": "Charset Menu",
  "description": "Restores the charset menu removed in Thunderbird 91",
  "version": "1.0.1",
  "author": "Jorg K",
  "applications": {
    "gecko": {
      "id": "CharsetMenu@jorgk.com",
      "strict_min_version": "78.0a1"
    }
  },
  "experiment_apis": {
    "CharsetMenu": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          ["CharsetMenu"]
        ],
        "script": "experiments.js"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
