{
  "manifest_version": 2,
  "name": "Charset Menu",
  "description": "Show charset being used as tooltip on Repair Text Encoding menu item",
  "version": "2.0.0",
  "author": "Jorg K",
  "applications": {
    "gecko": {
      "id": "CharsetMenu@jorgk.com",
      "strict_min_version": "102.0",
      "strict_max_version": "115.*"
    }
  },
  "experiment_apis": {
    "CharsetMenu": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          ["CharsetMenu"]
        ],
        "script": "experiments.js"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
